program kalkulator;
uses crt;
var oper:string; angka1,angka2:integer; p:real;
begin
    clrscr;
    write('pililah operasi matematika: ');
    readln(oper);
    writeln('masukkan angka');
    readln(angka1);
    readln(angka2);

    case oper of
    '+':p:=angka1+angka2;
    '-':p:=angka1-angka2;
    'x':p:=angka1*angka2; //aku pake x kecil
    '/':p:=angka1/angka2; //aku pake garing(/)
    end;
    write(angka1,oper,angka2,'=',p:1:1);
    
end.
