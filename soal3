program kalkulator;
uses crt;
var oper:string; angka1,angka2:integer; p:real;
begin
    clrscr;
    write('pililah operasi matematika: ');
    readln(oper);
    writeln('masukkan angka');
    readln(angka1);
    readln(angka2);

    case oper of
    'penjumlahan':p:=angka1+angka2;
    'pengurangan':p:=angka1-angka2;
    'perkalian':p:=angka1*angka2; 
    'pembagian':p:=angka1/angka2; 
    end;
    write('Hasil ',oper,' ',angka1,' dan ',angka2,' = ',p:1:1);   
end.
