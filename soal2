program cuaca;
uses crt;
var suhu:real; p:string;
begin
    clrscr;
    write('berapa suhu hari ini: ');
    readln(suhu);

    if suhu<0 then
    p:='Cuaca sangat dingin, jangan lupa pakai jaket tebal!'
    else if suhu<=15 then
    p:='Cuaca dingin, pakai jaket ya!'
    else if suhu<=25 then
    p:='Cuaca nyaman, cocok untuk jalan-jalan.'
    else if suhu<=35 then
    p:='Cuaca hangat, tetap terhidrasi!'
    else p:='Cuaca sangat panas, hindari sinar matahari langsung!';
    write(p);
end.
